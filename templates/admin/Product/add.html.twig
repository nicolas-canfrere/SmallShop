{% extends '@admin/master.html.twig' %}

{% block headLink %}
    {{ parent() }}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.11/summernote-bs4.css" rel="stylesheet">
{% endblock %}

{% block footScript %}
    {{ parent() }}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.11/summernote-bs4.js"></script>
    <script>
      $('#product_create_form_description').summernote({
        height: 300,
        toolbar: [
          ['style', ['bold', 'italic', 'underline', 'clear']],
          ['font', ['strikethrough', 'superscript', 'subscript']],
          ['para', ['ul', 'ol', 'paragraph']]
        ]
      })
    </script>
{% endblock %}


{% block content %}
    <div class="container">
        <div class="row">
            <div class="col">
                <h2>New product</h2>
            </div>
        </div>
        <div class="row">
            <div class="col"></div>
            <div class="col-md-8">
                {{ form_start(form, {attr:{novalidate: 'novalidate'}}) }}
                {{ form_errors(form) }}

                <div class="form-group">
                    {{ form_label(form.name.name) }}
                    {{ form_widget(form.name.name, {attr:{class: 'form-control'}}) }}
                    {{ form_errors(form.name.name) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.description) }}
                    {{ form_widget(form.description, {attr:{class: 'form-control'}}) }}
                    {{ form_errors(form.description) }}
                </div>

                {{ form_label(form.price) }}
                <div class="row">
                    <div class="col-md-6">
                        {{ form_widget(form.price.amount, {attr:{class: 'form-control'}}) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_widget(form.price.currency, {attr:{class: 'form-control'}}) }}
                    </div>
                </div>
                {{ form_errors(form.price) }}
                <div class="form-group mt-3">
                    {{ form_widget(form.submit, {attr:{class: 'btn btn-primary'}}) }}
                </div>
                {{ form_end(form) }}
            </div>
            <div class="col"></div>
        </div>
    </div>
{% endblock %}

