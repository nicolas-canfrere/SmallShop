{% extends '@admin/master.html.twig' %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col">
                <h2>Products list</h2>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <p>
                    <a href="{{ path('admin_products_add') }}" class="btn btn-success"><i class="fas fa-plus"></i> Add
                        new</a>
                </p>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <table class="table">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>On sale</th>
                        <th>Price</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for product in paginatedProducts %}
                        <tr>
                            <td>{{ product.name }}</td>
                            <td>
                                {{ product.onSale ? 'yes' : 'no' }}
                            </td>
                            <td>{{ product.price|format_price }}</td>
                            <td><a href="{{ path('admin_products_edit', {uuid: product.id}) }}"
                                   class="btn btn-primary btn-sm"><i class="fas fa-pencil-alt"></i> edit</a></td>
                        </tr>
                    {% else %}
                        <tr>
                            <td></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <div class="navigation">
                    {{ knp_pagination_render(paginatedProducts) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
