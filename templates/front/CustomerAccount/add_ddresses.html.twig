{% extends '@front/master.html.twig' %}

{% block content %}
    <div class="container">
        <div class="row mt-5">
            <div class="col"></div>
            <div class="col-md-8"><div class="h3">{% trans from 'ui' %}tabs-add-address{% endtrans %}</div></div>
            <div class="col"></div>
        </div>
    </div>
    <div class="container">
        <div class="row mt-5">
            <div class="col"></div>
            <div class="col-md-8">
                {{ form_start(form, {attr:{novalidate: 'novalidate'}}) }}
                {{ form_errors(form) }}

                <div class="form-group">
                    {{ form_label(form.fullname) }}
                    {{ form_widget(form.fullname, {attr:{class: 'form-control'}}) }}
                    {{ form_errors(form.fullname) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.street) }}
                    {{ form_widget(form.street, {attr:{class: 'form-control'}}) }}
                    {{ form_errors(form.street) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.postalCode) }}
                    {{ form_widget(form.postalCode, {attr:{class: 'form-control'}}) }}
                    {{ form_errors(form.postalCode) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.city) }}
                    {{ form_widget(form.city, {attr:{class: 'form-control'}}) }}
                    {{ form_errors(form.city) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.country) }}
                    {{ form_widget(form.country, {attr:{class: 'form-control'}}) }}
                    {{ form_errors(form.country) }}
                </div>

                <div class="form-group mt-3">
                    {{ form_widget(form.submit, {attr:{class: 'btn btn-primary'}}) }}
                </div>
                {{ form_end(form) }}
            </div>
            <div class="col"></div>
        </div>
    </div>
{% endblock %}

